#!/bin/bash

print_help() {
  printf "${CYAN}${BOLD}${UNDERLINE}Usage:${RESET}${PINK}${BOLD} sandbox <command> [argument]${RESET}\n"
  printf "\n"
  printf "  ${BOLD}Create and run a new ${PINK}sandbox${RESET}${BOLD} container from an image${RESET}\n"
  printf "\n"
  printf "${CYAN}${BOLD}${UNDERLINE}Commands:${RESET}\n"
  printf "  ${PINK}${BOLD}<image_name>${RESET}\t\t\t\t\t${BOLD}Create a new container from the specified image.${RESET}\n"
  printf "  ${PINK}${BOLD}-l, --list${RESET}\t\t\t\t\t${BOLD}List all running containers.${RESET}\n"
  printf "  ${PINK}${BOLD}-a, --attach <container_name>${RESET}\t\t\t${BOLD}Attach to the specified container.${RESET}\n"
  printf "  ${PINK}${BOLD}    --rm <container_name>${RESET}\t\t\t${BOLD}Remove the specified container.${RESET}\n"
  printf "  ${PINK}${BOLD}-h, --help${RESET}\t\t\t\t\t${BOLD}Show this help message.${RESET}\n"
  printf "\n"
  printf "${CYAN}${BOLD}${UNDERLINE}Options:${RESET}\n"
  printf "  ${PINK}${BOLD}    --name <name>${RESET}\t\t\t\t${BOLD}Specify a name for the container (non-ephemeral).${RESET}\n"
  printf "  ${PINK}${BOLD}-i, --isolate${RESET}\t\t\t\t\t${BOLD}Do not mount the current directory.${RESET}\n"
  printf "  ${PINK}${BOLD}-h, --home${RESET}\t\t\t\t\t${BOLD}Mount the home directory.${RESET}\n"
  printf "  ${PINK}${BOLD}    --nvidia${RESET}\t\t\t\t\t${BOLD}Enable NVIDIA GPU support.${RESET}\n"
  printf "  ${PINK}${BOLD}    --docker-socket${RESET}\t\t\t\t${BOLD}Add docker socket to the container.${RESET}\n"
  printf "  ${PINK}${BOLD}    --volume <host_path:container_path>${RESET}\t${BOLD}Mount a custom volume.${RESET}\n"
  printf "  ${PINK}${BOLD}    --dry-run${RESET}\t\t\t\t\t${BOLD}Show the command without executing it.${RESET}\n"
  printf "\n"
  printf "${CYAN}${BOLD}${UNDERLINE}Examples:${RESET}\n"
  printf "  ${PINK}${BOLD}sandbox fedora${RESET}\n"
  printf "  ${PINK}${BOLD}sandbox fedora --nvidia --name gpu_container${RESET}\n"
  printf "  ${PINK}${BOLD}sandbox fedora --home${RESET}\n"
  printf "  ${PINK}${BOLD}sandbox fedora --volume /path/on/host:/path/in/container${RESET}\n"
  printf "  ${PINK}${BOLD}sandbox fedora --isolate${RESET}\n"
}
